<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewUserProficeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/custom_toolbar"
                android:id="@+id/toolbar_notifications"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_image"
                android:id="@+id/img_notif_verfication_profile"
                android:scaleType="fitXY"
                />
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/txt_notify_verif_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Category : Electrician"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                    android:text="Worker"
                    android:textColor="#2196F3"
                    android:visibility="gone"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Saqib Nawaz"
                    android:id="@+id/txt_notify_verif_name"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Verified"
                    android:id="@+id/txt_notify_verif_status"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                    android:textColor="@android:color/holo_green_dark"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:drawablePadding="8dp"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:textColor="@color/textColor"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="johndoe@email.com"
                        android:textSize="12sp"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="100dp"
                        android:textAlignment="textEnd"
                        android:id="@+id/txt_notify_verif_email"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/radomir_tinkov_gilroy_regular"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/textColor"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:drawablePadding="8dp"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:textColor="@color/textColor"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum is a dummy text"
                        android:textSize="12sp"
                        android:layout_marginStart="100dp"
                        android:drawablePadding="8dp"
                        android:textAlignment="textEnd"
                        android:id="@+id/txt_notify_verif_description"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/radomir_tinkov_gilroy_regular"
                        android:textColor="@color/textColor"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:drawablePadding="8dp"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:textColor="@color/textColor"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kohat Pakistan"
                        android:textSize="12sp"
                        android:layout_marginStart="100dp"
                        android:drawablePadding="8dp"
                        android:textAlignment="textEnd"
                        android:id="@+id/txt_notify_verif_address"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/radomir_tinkov_gilroy_regular"
                        android:textColor="@color/textColor"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:drawablePadding="8dp"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:textColor="@color/textColor"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+92 0333 4343449"
                        android:textSize="12sp"
                        android:layout_marginStart="100dp"
                        android:drawablePadding="8dp"
                        android:textAlignment="textEnd"
                        android:id="@+id/txt_notify_verif_phone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/radomir_tinkov_gilroy_regular"
                        android:textColor="@color/textColor"
                        />
                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            android:layout_margin="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cnic Front"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_marginEnd="30dp"
                        android:textColor="@color/textColor"
                        android:textSize="14sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cnic Back"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="10dp">

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="4dp"
                        >

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="100dp"
                            android:padding="30dp"
                            android:background="@drawable/card_outline_primary"
                            android:src="@drawable/ic_credit_card"
                            android:id="@+id/img_notify_verif_cnic_front"
                            >

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        >

                        <ImageView
                            android:layout_width="130dp"
                            android:padding="30dp"
                            android:layout_height="100dp"
                            android:background="@drawable/card_outline_primary"
                            android:src="@drawable/ic_credit_card"
                            android:id="@+id/img_notify_verif_cnic_back"
                            >

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            android:layout_margin="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:drawableStart="@drawable/icon_location"
                    android:drawablePadding="8dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                    android:layout_gravity="center"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    >

                    <fragment
                        android:id="@+id/map_notification"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".ViewUserProficeActivity"
                        />
                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGreyColor"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
            android:id="@+id/txt_totalRevenueLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total revenue made"
                android:drawableStart="@drawable/icon_money"
                android:drawablePadding="8dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/textColor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5000.0"
                android:textSize="12sp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:id="@+id/rest_totalRevenue"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/textColor"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:visibility="visible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restrict user on app"
                android:drawablePadding="8dp"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:layout_marginStart="8dp"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:id="@+id/restrict_user"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/textColor"
                />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round_corners"
            android:text="Verify User Profile"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:id="@+id/btn_notif_verif_verify_profile"
            android:textColor="@android:color/white"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round_corners"
            android:text="Un Verify User"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            android:id="@+id/btn_notif_verif_un_verify_user"
            android:textColor="@android:color/white"
            />

    </LinearLayout>

</ScrollView>